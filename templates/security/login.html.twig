{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-[#1E375A]">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <form method="post" class="space-y-6">
            {% if error %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="font-bold underline">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-2xl font-bold text-center text-gray-700">Please sign in</h1>
            
            <div>
                <label for="inputLogin" class="block text-sm font-medium text-gray-700">Login</label>
                <input type="text" value="{{ last_username }}" name="login" id="inputEmail" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="login" required autofocus>
            </div>
            
            <div>
                <label for="inputPassword" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" id="inputPassword" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#1E375A] hover:bg-[#2A4A7F] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#1E375A]">
                    Sign in
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

